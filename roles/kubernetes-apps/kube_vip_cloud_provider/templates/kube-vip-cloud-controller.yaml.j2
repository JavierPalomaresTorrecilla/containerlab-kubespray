apiVersion: v1
kind: ServiceAccount
metadata:
  name: kube-vip-cloud-provider
  namespace: {{ kube_vip_cloud_provider_namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: kube-vip-cloud-provider
rules:
  - apiGroups: [""]
    resources:
      - nodes
      - nodes/status
      - services
      - services/status
      - endpoints
      - events
      - configmaps
    verbs:
      - get
      - list
      - watch
      - create
      - update
      - patch
  - apiGroups: ["coordination.k8s.io"]
    resources:
      - leases
    verbs:
      - get
      - list
      - watch
      - create
      - update
      - patch
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: kube-vip-cloud-provider
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: kube-vip-cloud-provider
subjects:
  - kind: ServiceAccount
    name: kube-vip-cloud-provider
    namespace: {{ kube_vip_cloud_provider_namespace }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kube-vip-cloud-provider
  namespace: {{ kube_vip_cloud_provider_namespace }}
  labels:
    app.kubernetes.io/name: kube-vip-cloud-provider
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: kube-vip-cloud-provider
  template:
    metadata:
      labels:
        app.kubernetes.io/name: kube-vip-cloud-provider
    spec:
      serviceAccountName: kube-vip-cloud-provider
      containers:
        - name: kube-vip-cloud-provider
          image: "{{ kube_vip_cloud_provider_image_repo }}:{{ kube_vip_cloud_provider_image_tag }}"
          imagePullPolicy: IfNotPresent
          env:
            - name: KUBEVIP_CONFIG_MAP
              value: "{{ kube_vip_cloud_provider_configmap_name }}"
            - name: KUBEVIP_NAMESPACE
              value: "{{ kube_vip_cloud_provider_namespace }}"
          resources:
            requests:
              cpu: 50m
              memory: 64Mi
            limits:
              cpu: 200m
              memory: 256Mi
